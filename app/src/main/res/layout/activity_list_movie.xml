<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:context=".ui.list_movie.ListMovieActivity">
        <android.support.v7.widget.Toolbar android:id="@+id/toolbarListMovie"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:background="@color/color_white"
                                           app:navigationIcon="@drawable/ic_back"
                                           app:title="@string/title_list_movie"/>
        <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestedscrollListMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView android:id="@+id/recyclerListMovie"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>
